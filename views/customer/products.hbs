<h2>Available Products</h2>

<div style="display:flex; flex-wrap:wrap; gap:20px;">
    {{#each products}}
    <div style="width:250px; border:1px solid #ccc; padding:10px; border-radius:10px;">

        <img src="{{image_url}}" style="width:100%; height:180px; object-fit:cover; border-radius:8px;">

        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <p><b>Price:</b> {{price}} RWF</p>
        <p><b>Available:</b> {{quantity}}</p>

        <a href="/products/{{productid}}" 
           style="display:block; margin-top:10px; padding:8px; background:#007bff; color:white; text-align:center; border-radius:5px;">
            View Details
        </a>
    </div>
    {{/each}}
</div>
